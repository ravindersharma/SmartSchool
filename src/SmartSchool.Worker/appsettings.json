{
  "UseStubEmail": false,
  "UseSendGrid": true,

  "SendGrid": {
    "ApiKey": "YOUR_KEY",
    "FromEmail": "no-reply@domain.com",
    "FromName": "SmartSchool Notifications"
  },

  "Email": {
    "MaxRetries": "3",
    "BaseBackoffSeconds": "2"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
